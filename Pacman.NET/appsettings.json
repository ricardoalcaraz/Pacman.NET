{
  "Urls": "http://*",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting": "Information",
      "Pacman.NET": "Information"
    }
  },
  "AllowedHosts": "*",
  "PacmanConfig": {
    "BaseAddress": "/archlinux",
    "Configuration": "/etc/pacman.conf",
    "CacheDirectory": "/srv/Pacman.NET/cache",
    "DbDirectory": "/srv/Pacman.NET/repos",
    "CustomRepoDir": "custom",
    "MirrorUrl": "/etc/pacman.d/mirrorlist",
    "CachePackages": true,
    "CacheDb": true,
    "CacheRefreshInterval": 2,
    "LogDirectory": "/var/log/Pacman.NET",
    "VerifySignature": true,
    "CustomRepos": [{"Name": "Test"}]
  },
  "Pacman": {
    "BaseAddress": "/archlinux",
    "CacheDirectory": "/srv/Pacman.NET/cache",
    "RepositoryDirectory": "/srv/Pacman.NET/repos",
    "SaveDirectory": "/srv/Pacman.NET/cache",
    "MirrorUrl": "/etc/pacman.d/mirrorlist"
  },
  "ReverseProxy": {
    "Routes": {
      "mirrorRoute" : {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/archlinux/{repo}/os/{arch}/{**file}"
        },
        "Transforms": [
          { "PathPattern": "{repo}/os/{arch}/{**file}" }
        ]
      }
    }
  }
}
